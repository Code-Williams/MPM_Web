<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Mr Part Maker WebSite" />

    <!-- title -->
    <title>MrParkMaker - Dashboard</title>

    <!-- favicon -->
    <link rel="shortcut icon" type="image/png" href="/img/favicon.png" />
    <!-- google font -->
    <link
      href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap"
      rel="stylesheet"
    />
    <!-- fontawesome -->
    <link rel="stylesheet" href="/css/all.min.css" />
    <!-- bootstrap -->
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
    <!-- owl carousel -->
    <link rel="stylesheet" href="/css/owl.carousel.css" />
    <!-- magnific popup -->
    <link rel="stylesheet" href="/css/magnific-popup.css" />
    <!-- animate css -->
    <link rel="stylesheet" href="/css/animate.css" />
    <!-- mean menu css -->
    <link rel="stylesheet" href="/css/meanmenu.min.css" />
    <!-- main style -->
    <link rel="stylesheet" href="/css/main.css" />
    <!-- responsive -->
    <link rel="stylesheet" href="/css/responsive.css" />

    <link rel="stylesheet" href="/css/user_interface.css" />

    <link rel="stylesheet" href="/css/header.css">
    
  </head>
  <body>
    <!-- header -->
    <%- include('./sides/header.ejs', {user}) %>
    <div style="display: block; width: 100%; height: 130px;"></div>

    <div class="menus">
      <!-- Right side menu -->
      <div class="menu-right">
        <div class="menu-right-profile">
          <div id="menu-right-profile-top">
            <div class="profile-image-menu-handler">
              <img
                src="/img/profile-image.svg"
                alt="Default profile picture"
                class="profile-image-menu"
              />
            </div>
            <div class="profile-left">
              <p id="menu-username" style="width: 100%;"><%= user.firstName %> <%= user.lastName %></p>
              <p id="menu-number" style="width: 100%;"><%= user.number %></p>
            </div>
          </div>
          <div id="menu-right-profile-bottom">
            <ul class="menu-item-profile">
              <li class="sub-menu-profile">
                <p class="sub-menu-profile-name">کیف پول</p>
                <p class="sub-menu-profile-value" id="wallet">0</p>
              </li>

              <li class="sub-menu-profile">
                <p class="sub-menu-profile-name">امتیاز</p>
                <p class="sub-menu-profile-value">0</p>
              </li>

              <a href="" class="increment-total">افزایش موجودی</a>
            </ul>
          </div>
        </div>

        <hr />

        <div class="menu-right-items">
          <a class="menu-right-subItem" href="https://www.twitch.tv/">
            <img src="" alt="" class="menu-right-image" />
            <p class="menu-right-name">سفارش های من</p>
          </a>

          <a class="menu-right-subItem" href="https://www.twitch.tv/">
            <img src="" alt="" class="menu-right-image" />
            <p class="menu-right-name">لیست ها</p>
          </a>

          <a class="menu-right-subItem" href="https://www.twitch.tv/">
            <img src="" alt="" class="menu-right-image" />
            <p class="menu-right-name">نظرات</p>
          </a>

          <a class="menu-right-subItem" href="https://www.twitch.tv/">
            <img src="" alt="" class="menu-right-image" />
            <p class="menu-right-name">نشانی ها</p>
          </a>

          <a class="menu-right-subItem" href="https://www.twitch.tv/">
            <img src="" alt="" class="menu-right-image" />
            <p class="menu-right-name">پیغام ها</p>
          </a>

          <a class="menu-right-subItem" href="https://www.twitch.tv/">
            <img src="" alt="" class="menu-right-image" />
            <p class="menu-right-name">اطلاعات حساب</p>
          </a>

          <a class="menu-right-subItem" href="/logout">
            <img src="" alt="" class="menu-right-image" />
            <p class="menu-right-name">خروج</p>
          </a>
        </div>
      </div>

      <div id="menuTopInfo">
        <div class="menuTopInfo-right menuTopInfo">
          <p class="menuTopInfo-title">اطلاعات شخصی</p>
          <div class="menuTopInfo-sub">
            <ul class="informations">
              <li class="subInformations">
                <p class="informations-name">نام و نام خانوادگی:</p>
                <p class="informations-value"><%= user.firstName %> <%= user.lastName %></p>
              </li>

              <li class="subInformations no-border-left">
                <p class="informations-name">پست الکترونیک</p>
                <p class="informations-value"><%= user.email %></p>
              </li>

              <li class="subInformations">
                <p class="informations-name">شماره تلفن همراه</p>
                <p class="informations-value"><%= user.number %></p>
              </li>

              <li class="subInformations no-border-left">
                <p class="informations-name">کد ملی</p>
                <p class="informations-value"><%= user.codeMelli %></p>
              </li>

              <li class="subInformations">
                <p class="informations-name">دریافت خبرنامه</p>
                <p class="informations-value"><%= user.news %></p>
              </li>

              <li class="subInformations no-border-left">
                <p class="informations-name">روش بازگشت وجه:</p>
                <p class="informations-value"><%= user.cardNumber %></p>
              </li>

              <li class="editInformation">
                <p class="editInformation-text">ویرایش اطلاعات شخصی</p>
              </li>
            </ul>
          </div>
        </div>

        <div class="menuTopInfo-left menuTopInfo">
          <p class="menuTopInfo-title">آدرس ها</p>
          <div class="menuTopInfo-sub">
            <ul class="informations-address">

              <% address.forEach(adr => { %>


                <li class="information-address">

                  <div class="information-right-side information-sides">

                      <p class="information-address-text"> <%= adr.address %> </p>
                      <p class="information-address-code"> <%= adr.code %> : کد پستی</p>  
                      
                  </div>

                  <div class="information-left-side information-sides">

                    <div class="dotted-btn">
                      <span></span>
                      <span></span>
                      <span></span>
                    </div>

                  </div>
                  

                </li>

              <% }) %>

            </ul>
          </div>
        </div>
      </div>

  </div>
    <%- include("./sides/footer.ejs", {about}) %>

    <!-- jquery -->
    <script src="/js/jquery-1.11.3.min.js"></script>
    <!-- bootstrap -->
    <script src="/bootstrap/js/bootstrap.min.js"></script>
    <!-- count down -->
    <script src="/js/jquery.countdown.js"></script>
    <!-- isotope -->
    <script src="/js/jquery.isotope-3.0.6.min.js"></script>
    <!-- waypoints -->
    <script src="/js/waypoints.js"></script>
    <!-- owl carousel -->
    <script src="/js/owl.carousel.min.js"></script>
    <!-- magnific popup -->
    <script src="/js/jquery.magnific-popup.min.js"></script>
    <!-- mean menu -->
    <script src="/js/jquery.meanmenu.min.js"></script>
    <!-- main js -->
    <script src="/js/main.js"></script>

    <script src=".//js/sticker.js"></script>
  </body>
</html>
