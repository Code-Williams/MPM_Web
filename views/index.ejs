    <div class="hero-area hero-bg index-hero">
      <div class="container">
        <div class="row">
          <div class="hero-text">
            <div class="hero-text-tablecell">

              <ul class="top-list">
                <% homeMainItems.forEach(item => { %>
                  
                  <li class="top-list-item top-list-item-left">
                    <div class="top-list-item-top">
                      <img
                        src="/img/<%= item.picture %>"
                        alt=""
                        class="top-list-image"
                      />

                      <h1 class="top-list-title"> <%= item.name %> </h1>

                      <p class="top-list-description">
                        <%= item.description %>
                      </p>
                    </div>

                    <div class="top-list-item-bottom">
                      <div class="hero-btns">
                        <a href="<%= item.link %>" class="boxed-btn">
                          <%= item.name %>
                        </a>
                      </div>
                    </div>
                  </li>

                <% }) %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- end hero area -->

    <!-- features list section -->
    <div class="list-section pt-80 pb-80">
      <div class="container">
        <div class="row">
          <% homeTopItems.forEach(obj => { %>

            <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
            <div class="list-box d-flex align-items-center">
              <div class="content">
                <h3><%= obj.name %></h3>
                <p><%= obj.description %></p>
              </div>

              <div class="list-icon">
                <i class="fas <%= obj.icon %>"></i>
              </div>
            </div>
          </div>

          <% }) %>
        </div>
      </div>
    </div>
