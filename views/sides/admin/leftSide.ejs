<style>
  .nav-link{
    text-align: right;
  }

  .nav-icon{
    float: left;
    display: flex;
  }

  .leftBadge{
    margin-left: 10px;
  }
</style>

<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="index3.html" class="brand-link">
      <img
        src="/dist/img/AdminLTELogo.png"
        alt="AdminLTE Logo"
        class="brand-image img-circle elevation-3"
        style="opacity: 0.8"
      />
      <span class="brand-text font-weight-light">MrPartMaker</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
      <!-- Sidebar user panel (optional) -->
      <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="image">
          <img
            src="/img/users/<%= user.picture %>"
            class="img-circle elevation-2"
            alt="User Image"
          />
        </div>
        <div class="info">
          <a href="/admin/users/<%= user.id %>" class="d-block"><%= user.username %></a>
        </div>
      </div>

      <!-- SidebarSearch Form -->
      <div class="form-inline">
        <div class="input-group" data-widget="sidebar-search">
          <input
            class="form-control form-control-sidebar"
            type="search"
            placeholder="Search"
            aria-label="Search"
          />
          <div class="input-group-append">
            <button class="btn btn-sidebar">
              <i class="fas fa-search fa-fw"></i>
            </button>
          </div>
        </div>
      </div>

      <!-- Sidebar Menu -->
      <nav class="mt-2">
        <ul
          class="nav nav-pills nav-sidebar flex-column"
          data-widget="treeview"
          role="menu"
          data-accordion="false"
        >
          <!-- Add icons to the links using the .nav-icon class
           with font-awesome or any other icon font library -->
          <li class="nav-item <%= (active && active == "index") ? "menu-open" : "" %>">
            <a href="/admin" class="nav-link <%= (active && active == "index") ? "active" : "" %>">
              <i class="nav-icon fas fa-tachometer-alt"></i>
              <p style="text-align: right;">داشبورد</p>
            </a>
          </li>

          <li class="nav-item <%= (active && active == "ticket") ? "menu-open" : "" %>">
            <a href="/admin/tickets" class="nav-link <%= (active && active == "ticket") ? "active" : "" %>">
              <i class="nav-icon fas fa-th">
                <% if(ticketCount > 0){ %>
                  <span class="right badge badge-danger leftBadge" style="float: left;"><%= ticketCount %></span>
                <% } %>
              </i>
              <p style="text-align: right;">
                تیکت ها
              </p>
            </a>
          </li>

          <li class="nav-item <%= (active && active == "users") ? "menu-open" : "" %>">
            <a href="/admin/users" class="nav-link <%= (active && active == "users") ? "active" : "" %>">
              <i class="nav-icon fas fa-users"></i>
              <p style="text-align: right;">کاربران</p>
            </a>
          </li>

          <li class="nav-item <%= (active && active == "services") ? "menu-open" : "" %>">
            <a href="/admin/services" class="nav-link <%= (active && active == "services") ? "active" : "" %>">
              <i class="nav-icon fas fa-file"></i>
              <p style="text-align: right;">خدمات</p>
            </a>
          </li>

        </ul>
      </nav>
      <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
  </aside>